<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <groupId>soademo</groupId>
  <artifactId>mds</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <build>
    <sourceDirectory>${project.basedir}/apps</sourceDirectory>
    <resources>
      <resource>
        <directory>${project.basedir}/apps</directory>
        <includes>
          <include>Schemas/**</include>
          <include>SoaApp_AntDeployment/**</include>
        </includes>
        <excludes>
          <exclude>MySoaMavenApp/**</exclude>
        </excludes>
      </resource>
    </resources>
    <finalName>sca-${project.artifactId}_rev${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>com.oracle.soa.plugin</groupId>
        <artifactId>oracle-soa-plugin</artifactId>
        <version>12.2.1-2-0</version>
        <extensions>true</extensions>
        <executions>
          <execution>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>deploy</goal>
            </goals>
            <configuration>
              <skip>false</skip>
              <sarLocation>${project.basedir}/target/sca-${project.artifactId}_rev${project.version}.jar</sarLocation>
              <serverUrl>http://localhost:7005</serverUrl>
              <user>weblogic</user>
              <password>manager123</password>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>